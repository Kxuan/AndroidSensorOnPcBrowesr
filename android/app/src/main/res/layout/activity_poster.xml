<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PosterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="陀螺仪"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvGyX"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvGyY"
        android:layout_alignTop="@+id/tvGyX"
        android:layout_toRightOf="@+id/tvGyX"
        android:layout_toEndOf="@+id/tvGyX"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvGyZ"
        android:layout_alignTop="@+id/tvGyY"
        android:layout_toRightOf="@+id/tvGyY"
        android:layout_toEndOf="@+id/tvGyY"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="加速度"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvAcX"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toLeftOf="@+id/tvGyY"
        android:layout_toStartOf="@+id/tvGyY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvAcY"
        android:layout_alignTop="@+id/tvAcX"
        android:layout_alignLeft="@+id/tvGyY"
        android:layout_alignStart="@+id/tvGyY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvAcZ"
        android:layout_alignTop="@+id/tvAcY"
        android:layout_alignLeft="@+id/tvGyZ"
        android:layout_alignStart="@+id/tvGyZ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="转动量"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvRtX"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/tvAcX"
        android:layout_alignStart="@+id/tvAcX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvRtY"
        android:layout_alignTop="@+id/tvRtX"
        android:layout_alignLeft="@+id/tvAcY"
        android:layout_alignStart="@+id/tvAcY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvRtZ"
        android:layout_alignTop="@+id/tvRtY"
        android:layout_alignLeft="@+id/tvAcZ"
        android:layout_alignStart="@+id/tvAcZ" />
</RelativeLayout>
